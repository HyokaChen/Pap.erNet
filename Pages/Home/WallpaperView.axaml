<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="600"
             xmlns:vm="using:Pap.erNet.ViewModels"
             x:Class="Pap.erNet.Pages.Home.WallpaperView"
             x:DataType="vm:WallpaperViewModel"
             >
    <Panel>
        <Image Width="300" Height="200" Stretch="UniformToFill" Source="{Binding ImageSource}"></Image>
        <TextBlock FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0 0 0 24 " Text="{Binding Author}"></TextBlock>
        <Border Background="#2b465c" Width="25" Height="25" 
                HorizontalAlignment="Right" 
                CornerRadius="4"
                Opacity="0.8"
                VerticalAlignment="Top" Margin="0 20 20 0 "
                >
            <TextBlock FontSize="12" 
                Foreground="Aquamarine" HorizontalAlignment="Center" 
                       VerticalAlignment="Center" Text="{Binding ResolutionRatio}"></TextBlock>
        </Border>
    </Panel>
</UserControl>
